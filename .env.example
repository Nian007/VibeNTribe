# VibeNTribe Environment Configuration
# Copy this file to .env and fill in your actual values

# LinkedIn OAuth Configuration
# Get these from: https://www.linkedin.com/developers/apps
VITE_LINKEDIN_CLIENT_ID=your_linkedin_client_id_here
VITE_LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret_here
VITE_LINKEDIN_REDIRECT_URI=http://localhost:5173/auth/linkedin/callback

# API Configuration
VITE_API_BASE_URL=http://localhost:3001/api

# WhatsApp Cloud API Configuration
# Get these from: https://developers.facebook.com/apps
VITE_WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token_here
VITE_WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here

# Database Configuration (for backend)
DATABASE_URL=mysql://username:password@localhost:3306/vibentribe
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_db_username
DB_PASSWORD=your_db_password
DB_NAME=vibentribe

# JWT Configuration (for backend)
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d

# App Configuration
NODE_ENV=development
PORT=3001

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Deployment URLs (update for production)
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:3001